{{#partial "contenido" }}
<body>
    <main>
        <section>
            {{#if organizacion}}
             <h2 class="contacto title">
             Editar Organizacion
             </h2>
             {{else}}
             <h2 class="contacto title">
             Alta de Organizacion
             </h2>
             {{/if}}
    
            <form class = "formulario" method="post">
                <fieldset>

                        <div class="campo">
                            <label>Usuario</label>
                            <input name="usuario" type="text" placeholder="Usuario" value = "{{organizacion.usuario.nickname}}">
                        </div>

                        <div class="campo">
                            <label>Email</label>
                            <input name="email" type="email" placeholder="Email" value="{{organizacion.usuario.email}}">
                        </div>
                        
                        <div class="campo">
                            <label>Contraseña</label>
                            <input name="contrasenia" type="password" placeholder="Contraseña">
                        </div>

                        <div class = "campo">
                            <label>CUIT</label>
                            <input name="cuit" type="number" placeholder="CUIT" value="{{organizacion.cuit}}">
                        </div>
    
                        <div class = "campo">
                            <label>Razón Social</label>
                            <input name="razon_social" type="text" placeholder="Razón Social" value="{{organizacion.razonSocial}}">
                        </div>
    
                        <div class = "campo">
                            <label>Tipo</label>
{{!--                             <select name="tipo_organizacion" value="{{organizacion.clasificacion.tipoOrganizacion}}"> --}}
                                <select name="tipo_organizacion">
                                <option>Gubernamental</option>
                                <option>ONG</option>
                                <option>Empresa</option>
                                <option>Institucion</option>
                            </select>
                        </div>

                        <div class = "campo">
                            <label>Clasificación</label>
                            <input name="clasificacion" type="text" placeholder="Clasificación" value="{{organizacion.clasificacion.clasificacion}}">
                        </div>
    
                        <div class = "campo">
                            <label>Código Postal</label>
                            <input name="codigo_postal" type="text" placeholder="Código Postal" value="{{organizacion.ubicacion.localidad}}">
                        </div>      
                        
                        <div class = "campo">
                            <label>Calle</label>
                            <input name="calle" type="text" placeholder="Calle" value="{{organizacion.ubicacion.calle}}">
                        </div>  
    
                        <div class = "campo">
                            <label>Altura</label>
                            <input name="altura" type="number" placeholder="Altura" value="{{organizacion.ubicacion.altura}}">
                        </div>  
    
                        <div class = "campo">
                            <label>Municipio</label>
                            <select name="agente_municipal" id="agente_municipal_id" value="{{organizacion.agenteMunicipal}}">
                             {{#if organizacion}}
                             <option value="{{organizacion.agenteMunicipal.id}}">{{organizacion.agenteMunicipal.municipio}}</option>
                             {{else}}
                             <option value="null">Otro</option>
                             {{/if}}
                             {{#each agenteMunicipal}}
                             <option value="{{id}}">{{municipio}}</option>
                             {{/each}}
                            </select>
                        </div>  

<!--                        <div class = "campo">-->
<!--                            <label>Sectores</label>-->
<!--                            <button class="boton-sector" type="submit">Agregar</button>-->
<!--                            <button class="boton-sector visualizar" type="submit">Visualizar</button>-->
<!--                        </div>  -->
    
                        <div class = "enviar">
                            <button class="boton" type="submit">Enviar</button>
                        </div>
                </fieldset>
            </form>
    
        </section>
    </main>
    

    <footer class>
    </footer>

</body>
{{/partial}}
{{> base.hbs }}