{{#partial "contenido" }}
<body>
    <main>
        <section>
            <h2 class="contacto title">Alta de Trayecto</h2>

            <form class="formulario" method="post">
                <fieldset>
                    <div class="campo">
                        <label>Nombre de Trayecto</label>
                        <input required="required" name="nombre" type="text" placeholder="Nombre">
                    </div>

                    <div class="campo">
                        <label>Calle de Inicio</label>
                        <input required="required" name="calle_inicio" type="text" placeholder="Calle de Inicio">
                    </div>

                    <div class="campo">
                        <label>Altura de Inicio</label>
                        <input required="required" name="altura_inicio" type="number" placeholder="Altura de Inicio">
                    </div>

                    <div class="campo">
                        <label>Localidad de Inicio</label>
                        <input required="required" name="localidad_inicio" type="text" placeholder="Localidad de Inicio">
                    </div>

                    <div class="campo">
                        <label>Provincia de Inicio</label>
                        <input required="required" name="provincia_inicio" type="text" placeholder="Provincia de Inicio">
                    </div>

                    <div class="campo">
                        <label>Calle de Fin</label>
                        <input required="required" name="calle_fin" type="text" placeholder="Calle de Fin">
                    </div>

                    <div class="campo">
                        <label>Altura de Fin</label>
                        <input required="required" name="altura_fin" type="number" placeholder="Altura de Fin">
                    </div>

                    <div class="campo">
                        <label>Localidad de Fin</label>
                        <input required="required" name="localidad_fin" type="text" placeholder="Localidad de Fin">
                    </div>

                    <div class="campo">
                        <label>Provincia de Fin</label>
                        <input required="required" name="provincia_fin" type="text" placeholder="Provincia de Fin">
                    </div>
                    
                    <div class="enviar">
                        <button class="boton" type="submit">Guardar y Generar Tramo</button>
                    </div>
                    
                </fieldset>
            </form>

        </section>
    </main>


    <footer class>
    </footer>

</body>
{{/partial}}
