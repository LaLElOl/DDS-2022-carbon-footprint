{{#partial "contenido" }}
<body>
    <main>
        <section>
            <h2 class="contacto title">Alta de Trayecto</h2>

            <form class="formulario" method="post">
                <fieldset>
                    <div class="campo">
                        <label>Calle de Inicio</label>
                        <input name="calle_inicio" type="text" placeholder="Calle de Inicio" value="{{tramo.inicio.calle}}">
                    </div>

                    <div class="campo">
                        <label>Altura de Inicio</label>
                        <input name="altura_inicio" type="number" placeholder="Altura de Inicio" value="{{tramo.inicio.altura}}">
                    </div>

                    <div class="campo">
                        <label>Calle de Fin</label>
                        <input name="calle_fin" type="text" placeholder="Calle de Fin" value="{{tramo.fin.calle}}">
                    </div>

                    <div class="campo">
                        <label>Altura de Fin</label>
                        <input name="altura_fin" type="number" placeholder="Altura de Fin" value="{{tramo.fin.altura}}">
                    </div>
                    
                    <div class="enviar">
                        <button class="boton" type="submit">Enviar</button>
                    </div>

                    
                </fieldset>
            </form>

        </section>
    </main>


    <footer class>
        <p>Escribir algo copado aca</p>
    </footer>

</body>
{{/partial}}
{{> base.hbs }}